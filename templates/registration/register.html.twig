{% extends 'base.html.twig' %}
{% block title %}{{ 'register'|trans }}{% endblock %}
{% block body %}
{{ form_errors(registrationForm) }}

{{ form_start(registrationForm, {
    attr: { class: 'flex flex-col w-full items-center max-w-md bg-white dark:bg-gray-800 shadow-lg rounded-xl p-2 sm:p-4 gap-2 sm:gap-4' }
}) }}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-2xl font-semibold text-center">{{ 'register'|trans }}!</h1>
    {{ form_row(registrationForm.email, {
        row_attr: { class: 'w-full' },
        attr: { class: 'w-full p-2 border rounded-md bg-gray-50 dark:bg-gray-700 dark:border-gray-600', placeholder: 'email'|trans },
        label_attr: { class: 'hidden' }
    }) }}
    {{ form_row(registrationForm.username, {
        row_attr: { class: 'w-full' },
        attr: { class: 'w-full p-2 border rounded-md bg-gray-50 dark:bg-gray-700 dark:border-gray-600', placeholder: 'username'|trans },
        label_attr: { class: 'hidden' }
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        row_attr: { class: 'w-full' },
        attr: { class: 'w-full p-2 border rounded-md bg-gray-50 dark:bg-gray-700 dark:border-gray-600', placeholder: 'password'|trans },
    }) }}
    {{ form_row(registrationForm.agreeTerms, {
        label_attr: { class: 'text-sm text-gray-700 dark:text-gray-300' }
    }) }}

    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition">{{ 'register'|trans }}</button>
    <a href="{{ path('app_login') }}" class="w-2/3 text-center p-2 rounded-md bg-gray-300 dark:bg-gray-700 text-sm">{{ 'signin.notnew'|trans }}</a>
{{ form_end(registrationForm) }}
{% endblock %}
