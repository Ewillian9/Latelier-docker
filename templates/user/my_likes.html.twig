{% extends 'base.html.twig' %}
{% block title %}My likes{% endblock %}
{% block body %}
<section class="base main-color">
    {{ include('components/_nav.html.twig') }}
    <section class="w-full border-b border-gray-300 dark:border-gray-600 pb-2 sm:pb-4">
        <h2 class="text-3xl font-semibold">Mes likes</h2>
        <p class="secondary-text mt-1">Liste de vos likes</p>
    </section>

    {% if likes is empty %}
        <p id="no_comment_user" class="secondary-text">Vous n'avez pour le moment lik√© aucune oeuvre</p>
    {% else %}
        <ul id="comments_user" class="w-full space-y-2 sm:space-y-4" {{ turbo_stream_listen('comment') }}>
            {% for like in likes %}
                <li id="comment_{{ like.id }}" class="flex justify-between items-start rounded-xl shadow-md bg-gray-100 dark:bg-gray-900 p-2 sm:p-4">
                    <div class="flex-1">
                        
                        <time datetime="{{ like.createdAt ? like.createdAt|date('c') : '' }}" class="text-xs secondary-text mt-2">{{ like.createdAt ? like.createdAt|ago : 'il y a un moment'}} on {{like.artwork.title}}</time>
                    </div>
                    <div class="flex flex-col items-end gap-2">
                        <a href="{{ path('app_artwork_show', {'id': like.artwork.id}) }}" class="btn btn-gray">{{ ux_icon('ic:outline-arrow-forward', { class: 'w-5 h-5' }) }}<span class="md">{{'artwork.show'|trans}}</span></a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</section>
{% endblock %}
