{% extends 'base.html.twig' %}
{% block title %}{{'profile'|trans}}{% endblock %}
{% block body %}
<section class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-4 md:p-8 flex flex-col gap-4">
    {{ include('components/_nav.html.twig') }}
    <div class="w-full border-b border-gray-300 dark:border-gray-600 pb-4 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-semibold text-gray-800 dark:text-white">{{'hello'|trans }} {{ user.username }}</h1>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Informations de votre compte</p>
        </div>
    </div>
    <ul class="w-full space-y-4 text-gray-700 dark:text-gray-200 text-base">
        <li class="flex justify-between border-b border-dashed pb-4">
            <span class="font-medium text-gray-500 dark:text-gray-400">{{'username'|trans }}</span>
            <span>{{ user.username }}</span>
        </li>
        <li class="flex justify-between border-b border-dashed pb-4">
            <span class="font-medium text-gray-500 dark:text-gray-400">{{'email'|trans }}</span>
            <span>{{ user.email }}</span>
        </li>
        <li class="flex justify-between border-b border-dashed pb-4">
            <span class="font-medium text-gray-500 dark:text-gray-400">Rôles</span>
            <span>{{ user.roles | join(', ') }}</span>
        </li>
    </ul>
    <nav class="w-full mt-6 space-y-3">
    <div class="flex justify-between items-center">
        <div class="space-x-2">
            {% if user.comments|length > 0 %}
                <a href="{{ path('app_my_comments', {'id': user.id}) }}" class="text-sm bg-gray-300 dark:bg-gray-700 px-3 py-1 rounded hover:bg-gray-400 dark:hover:bg-gray-600 transition"> Voir mes commentaires ({{ user.comments|length }})</a>
            {% endif %}
            {% if user.artworks|length > 0 %}
                <a href="{{ path('app_my_artworks', {'id': user.id}) }}" class="text-sm bg-gray-300 dark:bg-gray-700 px-3 py-1 rounded hover:bg-gray-400 dark:hover:bg-gray-600 transition"> Voir mes œuvres ({{ user.artworks|length }})</a>
            {% endif %}
        </div>
        <div class="text-xs text-gray-500 dark:text-gray-400 text-right">
            <div>{{'created'|trans }} {{ user.createdAt ? user.createdAt|ago : 'N/A' }} | {{'updated'|trans }} {{ user.updatedAt ? user.updatedAt|ago : 'N/A' }}</div>
        </div>
    </div>
</nav>
</section>
{% endblock %}
