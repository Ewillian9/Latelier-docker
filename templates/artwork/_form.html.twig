<turbo-frame id="upload_form">
{{ form_start(form, { attr: { enctype: 'multipart/form-data', class: 'space-y-6', 'data-turbo-frame': 'upload_form', 'data-turbo-frame': '_top'}}) }}

    <div id="image-fields" data-controller="image-preview collection" data-collection-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
        {{ form_label(form.images, null, {'label_attr': {'class': 'block text-gray-700 dark:text-gray-300 font-semibold mb-3'}}) }}
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4" data-collection-target="container">
            {% for imageForm in form.images %}
            <div>
                <div class="image-input-square relative w-full aspect-square border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg bg-gray-50 dark:bg-gray-700 hover:border-gray-400 dark:hover:border-gray-500 transition-colors cursor-pointer overflow-hidden group" 
                     data-image-preview-target="group">
                    
                    {{ form_widget(imageForm.imageFile, {
                        'attr': {
                            'class': 'absolute inset-0 w-full h-full opacity-0 cursor-pointer z-10',
                            'data-action': 'change->image-preview#handleFileChange',
                            'data-image-preview-target': 'input',
                            'accept': 'image/*'
                        }
                    }) }}
                    
                    <div class="absolute inset-0 flex flex-col items-center justify-center text-gray-500 dark:text-gray-400 group-hover:text-gray-600 dark:group-hover:text-gray-300 transition-colors" data-image-preview-target="placeholder">
                        <svg class="w-8 h-8 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        <span class="text-xs font-medium">Add Image</span>
                    </div>
                    
                    <div class="absolute inset-0 hidden" data-image-preview-target="preview">
                        <img class="w-full h-full object-cover rounded-lg" 
                             data-image-preview-target="image" alt="Preview">
                        
                        <button type="button" 
                                class="absolute top-2 right-2 w-6 h-6 bg-red-500 hover:bg-red-600 text-white rounded-full text-xs font-bold flex items-center justify-center shadow-lg transition-colors z-20"
                                data-action="click->image-preview#removeImage click->collection#removeItem"
                                data-image-preview-target="removeBtn">Ã—</button>

                        <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-75 text-white text-xs p-1 rounded-b-lg truncate opacity-0 group-hover:opacity-100 transition-opacity">
                            <span data-image-preview-target="filename"></span>
                        </div>
                    </div>
                    
                    <div class="absolute inset-0 bg-gray-100 dark:bg-gray-600 flex items-center justify-center hidden" data-image-preview-target="loading">
                        <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-500"></div>
                    </div>
                </div>
                <div class="mt-2">
                    {{ form_widget(imageForm.legend, {
                        'attr': { 'class': 'w-full p-2 text-sm border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400',
                            'placeholder': 'Image legend...',
                            'maxlength': '100'
                        }
                    }) }}
                </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div>
        {{ form_widget(form.title, {'attr': {'class': 'w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400',
                                            'placeholder': 'A catchy title...'}}) }}
    </div>

    <div>
        {{ form_widget(form.description, {'attr': {'class': 'w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400',
                                            'placeholder': 'Write here the detailed description of your artwork'}}) }}
    </div>

    <div>
        {{ form_widget(form.keywords, {'attr': {'class': 'w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400',
                                            'placeholder': 'Keywords, comma seperated words. ex: tree,green,party'}}) }}
    </div>

    <button class="px-4 py-2 rounded bg-green-500 dark:bg-green-600 hover:bg-green-600 dark:hover:bg-green-700 text-white font-semibold transition shadow">
        {{ button_label|default('Save') }}
    </button>

{{ form_end(form) }}
</turbo-frame>