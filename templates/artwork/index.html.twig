{% extends 'base.html.twig' %}
{% block title %}Home - Artworks{% endblock %}
{% block body %}
    <section class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') %}
            <figure class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                <a href="{{ path('app_artwork_new') }}">
                    <span class="w-full h-48 flex items-center justify-center bg-gray-100 text-gray-400 text-4xl">+</span>
                    <figcaption class="p-4">
                        <h2 class="text-lg font-semibold">New</h2>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Add a new artwork...</p>
                    </figcaption>
                </a>
            </figure> 
        {% endif %}
        {% for artwork in artworks %}
            <figure class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                <a href="{{ path('app_artwork_show', {'id': artwork.id}) }}">
                    {% if artwork.images|length > 0 %}
                        <img src="{{ vich_uploader_asset(artwork.images[0], 'imageFile') }}" alt="{{ artwork.title }}" class="w-full h-48 object-cover" loading="lazy">
                    {% else %}
                        <span class="w-full h-48 flex items-center justify-center bg-gray-100 text-gray-400 text-4xl">X</span>
                    {% endif %}
                    <figcaption class="p-4">
                        <h2 class="text-lg font-semibold">{{ artwork.title }}</h2>
                        <p class="text-sm text-gray-600 dark:text-gray-400">{{ artwork.description|slice(0, 50) }}...</p>
                    </figcaption>
                </a>
            </figure>
        {% else %}
            <p class="text-lg font-semibold">No artworks match your criterias. {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') %}You are an artist, feel free to add one!{% endif %}</p>
        {% endfor %}
    </section>
{% endblock %}
