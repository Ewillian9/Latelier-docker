{% extends 'base.html.twig' %}
{% block title %}{{'home'|trans}} - L'Atelier de Gilles{% endblock %}
{% block body %}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <section class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 sm:gap-4">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') %}
            <figure class="main-color rounded-lg shadow-md overflow-hidden">
                <a href="{{ path('app_artwork_new') }}">
                    <span class="w-full h-48 flex items-center justify-center bg-gray-100 secondary-text">{{ ux_icon('ic:outline-plus', { class: 'w-16 h-16' }) }}</span>
                    <figcaption class="p-2 sm:p-4">
                        <h2 class="text-lg font-semibold">{{'artwork.new'|trans}}</h2>
                        <p class="text-sm secondary-text">{{'artwork.new.decription'|trans}}</p>
                    </figcaption>
                </a>
            </figure> 
        {% endif %}
        {% for artwork in artworks %}
            <figure class="main-color rounded-lg shadow-md overflow-hidden">
                <a href="{{ path('app_artwork_show', {'id': artwork.id}) }}">
                    {% if artwork.images|length > 0 %}
                        <img src="{{ vich_uploader_asset(artwork.images[0], 'imageFile') }}" alt="{{ artwork.title }}" class="w-full h-48 object-cover" loading="lazy">
                    {% else %}
                        <span class="w-full h-48 flex items-center justify-center bg-gray-100 secondary-text text-4xl">X</span>
                    {% endif %}
                    <figcaption class="p-2 sm:p-4">
                        <h2 class="text-lg font-semibold">{{ artwork.title }}</h2>
                        <p class="text-sm secondary-text">{{ artwork.description|slice(0, 50) }}...</p>
                    </figcaption>
                </a>
            </figure>
        {% else %}
            <p class="text-lg font-semibold">{{'nomatch'|trans}} {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') %}{{'nomatch.artist'|trans}}{% endif %}</p>
        {% endfor %}
    </section>
{% endblock %}
