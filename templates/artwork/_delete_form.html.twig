<form method="post" action="{{ path('app_artwork_delete', {'id': artwork.id}) }}" data-turbo-confirm="{{'delete.confirm'|trans}} {{ artwork.title }}?">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
    <button class="btn btn-red">{{ ux_icon('mdi:delete-outline', { class: 'w-5 h-5' }) }}<span class="md">{{'delete'|trans}}</span></button>
</form>
