<form method="post" action="{{ path('app_artwork_delete', {'id': artwork.id}) }}" data-turbo-confirm="Are you sure you want to delete this artwork?">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artwork.id) }}">
    <button class="flex items-center gap-1 px-3 py-1 rounded bg-red-300 dark:bg-red-700 text-sm hover:bg-red-400 dark:hover:bg-red-600 transition">{{ ux_icon('ic:outline-delete', { class: 'w-5 h-5' }) }}<span class="hidden md:inline">{{'delete'|trans}}</span></button>
</form>
