{% extends 'base.html.twig' %}
{% block title %}{{ artwork.title }}{% endblock %}
{% block body %}
    <article data-controller="carousel" class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg p-4 md:p-8 w-full overflow-hidden">
        {{ include('components/_nav.html.twig') }}
        {% if artwork.images|length > 0 %}
            <figure aria-live="polite" class="relative aspect-video overflow-hidden rounded-lg shadow-lg mb-4">
                {% for image in artwork.images %}
                    <img data-carousel-target="mainImage" src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="Image {{ artwork.title }} n°{{ loop.index }}" data-index="{{ loop.index0 }}" class="carousel-main-image w-full h-full object-cover absolute top-0 left-0 transition-opacity duration-500 ease-in-out {% if loop.first %}opacity-100 z-10{% else %}opacity-0 z-0{% endif %}">
                {% endfor %}
            </figure>
            <figure class="flex gap-2 justify-center">
                {% for image in artwork.images %}
                    <img src="{{ vich_uploader_asset(image, 'imageFile') }}" data-carousel-target="thumb" class="carousel-thumb w-16 h-16 object-cover rounded cursor-pointer border-2 border-transparent hover:border-gray-400 transition" data-index="{{ loop.index0 }}" alt="Thumb {{ artwork.title }} n°{{ loop.index }}">
                {% endfor %}
            </figure>
        {% else %}
            <p class="w-full rounded-lg shadow-lg h-48 flex items-center justify-center bg-gray-300 dark:bg-white text-gray-400 text-4xl">L'image a été perdu :/</p>
        {% endif %}
        <section class="space-y-4">
            <h2 class="text-3xl font-bold text-gray-800 dark:text-white">{{ artwork.title }}</h2>
            <p class="text-gray-600 dark:text-gray-300">{{ artwork.description|default('No description.') }}</p>
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') %}
                <ul class="flex flex-wrap gap-2">
                    {% for keyword in artwork.keywords|split(',') %}
                        <li class="bg-gray-200 dark:bg-gray-700 text-sm text-gray-800 dark:text-gray-200 px-3 py-1 rounded-full">{{ keyword|trim }}</li>
                    {% endfor %}
                </ul>
                <p class="text-sm text-gray-500 dark:text-gray-400">Updated <time datetime="{{ artwork.updatedAt ? artwork.updatedAt|date('c') : '' }}">{{ artwork.updatedAt ? artwork.updatedAt|ago : 'NaN' }}</time></p>
            {% endif %}
            <p class="text-sm text-gray-500 dark:text-gray-400">Added <time datetime="{{ artwork.createdAt ? artwork.createdAt|date('c') : '' }}">{{ artwork.createdAt ? artwork.createdAt|ago : 'NaN' }}</time> by {{ artwork.artist.username }}</p>
        </section>
    </article>
    {{ include('comment/_comment.html.twig') }}
{% endblock %}
