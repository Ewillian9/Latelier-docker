<nav aria-label="Artwork actions" class="flex justify-between items-center mb-4">
    <button data-controller="back-button" data-action="click->back-button#goBack" class="flex items-center px-3 py-1 rounded bg-gray-300 dark:bg-gray-700 text-sm hover:bg-gray-400 dark:hover:bg-gray-600 transition">{{ ux_icon('ic:outline-arrow-back', { class: 'w-5 h-5' }) }}<span class="hidden md:inline">{{'back'|trans}}</span></button>
    {% if app.request.attributes.get('_route') == 'app_artwork_show' and (is_granted('ROLE_ADMIN') or is_granted('ROLE_ARTIST') and artwork.artist == app.user) %}
        <ul class="flex gap-2 md:gap-4">
            <li><a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}" class="flex items-center gap-1 px-3 py-1 rounded bg-gray-300 dark:bg-gray-700 text-sm hover:bg-gray-400 dark:hover:bg-gray-600 transition">{{ ux_icon('ic:outline-edit', { class: 'w-5 h-5' }) }}<span class="hidden md:inline">{{'edit'|trans}}</span></a></li>
            <li>{{ include('artwork/_delete_form.html.twig') }}</li>
        </ul>
    {% endif %}
    {% if app.request.attributes.get('_route') is same as('app_profile') %}
        <a href="{{ path('app_profile_edit') }}" class="flex items-center gap-1 px-3 py-1 rounded bg-gray-300 dark:bg-gray-700 text-sm hover:bg-gray-400 dark:hover:bg-gray-600 transition">{{ ux_icon('ic:outline-edit', { class: 'w-5 h-5' }) }}<span class="hidden md:inline">{{'edit'|trans}}</span></a>
    {% endif %}
</nav>