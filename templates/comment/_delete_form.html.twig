<form method="post" action="{{ path('app_comment_delete', {'id': comment.id}) }}" data-turbo-confirm="Are you sure you want to delete this comment?">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn btn-red">{{ ux_icon('ic:outline-delete', { class: 'w-5 h-5' }) }}<span class="md">{{'delete'|trans}}</span></button>
</form>
